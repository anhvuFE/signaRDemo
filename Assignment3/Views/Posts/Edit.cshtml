@model Assignment3.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h1 style="font-size: 2em; color: #333; text-align: center; margin-bottom: 20px;">Edit</h1>

<h4 style="font-size: 1.5em; color: #666; margin-bottom: 10px;">Post</h4>
<hr style="border: 1px solid #ddd; margin-bottom: 20px;" />

<div class="row" style="display: flex; justify-content: center;">
    <div class="col-md-4" style="background: #f9f9f9; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group" hidden>
                <label asp-for="Author" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label" style="font-weight: bold;"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" style="border-radius: 5px;"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" style="border-radius: 5px;" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input asp-for="UpdatedDate" class="form-control" style="border-radius: 5px;" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label" style="font-weight: bold;"></label>
                <input asp-for="Title" class="form-control" style="border-radius: 5px;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label" style="font-weight: bold;"></label>
                <textarea asp-for="Content" class="form-control" style="border-radius: 5px; height: 150px;"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishStatus" class="control-label" style="font-weight: bold;"></label>
                <input asp-for="PublishStatus" class="form-control" style="border-radius: 5px;" />
                <span asp-validation-for="PublishStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="border-radius: 5px;" />
            </div>
        </form>
    </div>
</div>

<div style="text-align: center; margin-top: 20px;">
    <a asp-action="Index" class="btn btn-secondary" style="border-radius: 5px;">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
